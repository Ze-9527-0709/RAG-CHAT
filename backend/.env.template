# ================================================================
# RAG Chat App Environment Configuration  
# ================================================================

# ================================================================
# AI Agent Configuration
# ================================================================
AI_AGENT_NAME=AUV
AI_AGENT_PERSONALITY=I am AUV (Autonomous Utility Vehicle), an intelligent AI assistant created by Rui for the RAG Chat App. I have a helpful, professional, and knowledgeable personality.

# ================================================================
# OpenAI Configuration (Required)
# ================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# ================================================================
# Pinecone Vector Database Configuration (Required for RAG)
# ================================================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=your_index_name_here
PINECONE_ENVIRONMENT=gcp-starter
EMBEDDING_MODEL=text-embedding-3-small

# ================================================================
# Server Configuration
# ================================================================
BACKEND_PORT=8000
FRONTEND_PORT=5173
BACKEND_HOST=0.0.0.0
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ================================================================
# Model Configuration
# ================================================================
MAX_TOKENS=4000
TEMPERATURE=0.7
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=4

# ================================================================
# Local Model Configuration (Optional - for Ollama)
# ================================================================
LOCAL_MODEL_ENDPOINT=http://localhost:11434/api/generate
LOCAL_MODEL_NAME=llama2:7b-chat
ENABLE_LOCAL_FALLBACK=true

# ================================================================
# Advanced Configuration
# ================================================================
ENABLE_MEMORY_SYSTEM=true
ENABLE_PERSONALITY_ADAPTATION=true
MAX_CONVERSATION_HISTORY=20
ENABLE_VERBOSE_LOGGING=false

# ================================================================
# Security Settings (Production)
# ================================================================
SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ================================================================
# Optional: Third-party Model APIs
# ================================================================
# Claude API (Anthropic)
ANTHROPIC_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# Gemini API (Google)
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro